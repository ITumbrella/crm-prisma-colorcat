#消费单
type Bill {
  id: ID! @unique
  createdAt: DateTime!
  user: UserBasic!
  bookingRecord: BookingRecord!
  idCode: String @unique #订单号
  totalPrice: Int
  billDetail: [String!]!
  paid: Int @default(value: 0)
  paymentStatus: Int
  discount: Float
  flowBalance: Int @default(value: 0) #使用过的活动余额
  freezingBalance: Int @default(value: 0) #使用过的冻结余额
  deposit: Int @default(value: 0) #订金
  payback: Int @default(value: 0) #退费（正确情况下只更新一次）
  isOnlyDepositBill: Boolean #仅付订金的单子为true
  isCompleted: Int #0未完成，1已完成，2退款
  creatorId: ID
  creator: String
  editor: String
  editorId: ID
  editedAt: String
}
#付款记录主表
type Payment {
  id: ID! @unique
  bill: Bill
  paymentType: String
  shouldPay: Int
  paymentWay: Int @default(value: -1) # 0为现金、1为刷卡、2为其它
  confirmed: Boolean @default(value: false) #确认收费
  balance: Int @default(value: 0) #抵扣余额
  paymentPS: String #备注
  createdAt: DateTime!
  creatorId: ID
  creator: String
  editor: String
  editorId: ID
  editedAt: String
}

