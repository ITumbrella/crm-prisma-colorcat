# 客户主表
type UserBasic {
  id: ID! @unique
  mobile: String! #手机号
  name: String! #姓名
  sex: String! #性别
  age: String! #年龄
  birthYear: String! #出生年份
  birthDay: String #出生年月日
  where: String! #区域（二级联动）
  bigFrom: String! #大来源
  qq: String #qq号
  wechat: String #微信号
  categoryFromAd: String #广告来源之类别
  planFromAd: String #广告来源之计划
  categoryFromMarket: String #市场来源之类型
  agencyFromMarket: String #市场来源之机构
  vipLevel: String #vip等级
  vipID: String #会员卡号
  idCard: String #身份证号
  email: String
  secondPhoneNum: String #第二联系电话
  introducer: String #介绍人
  career: String #职业
  marriage: String #婚姻状况
  phoneModel: String #手机型号
  carModel: String #汽车型号
  addressDetail: String #二级联动详细地址
  addressSpecific: String #具体地址
  medicalHistory: String #病史
  reMark: String #备注
  mainProject: String
  focusProject: String
  toBeDevelopedProject: String
  haveDoneInThisHospital: String
  haveDoneInAnotherHospital: String
  tag: String
  createdAt: DateTime!
}
#咨询记录
type ConsultingRecord {
  id: ID! @unique
  user: UserBasic!
  advisoryWay: String
  advisoryResult: String
  advisorySummary: String
  advisoryDetail: String
  createdAt: DateTime!
}
#预约
type BookingRecord {
  id: ID! @unique
  user: UserBasic!
  toHospitalCate: String!
  time: String!
  createdAt: DateTime!
}
#字典
type Dictionary {
  id: ID! @unique
  itemName: String!
  itemParentId: String
  itemAvailiable: Boolean!
  rootIndex: Int
  sortIndex: Int
  ps: String
  createdAt: DateTime!
}
#管理员
type Admin {
  id: ID! @unique
  name: String!
  userName: String! @unique
  password: String!
  departmentName: String!
  availiable: Boolean!
  routePages: [Int!]! #管理员权限
  createdAt: DateTime!
}
#权限组
type Department {
  id: ID! @unique
  name: String! @unique
  routePages: [Int!]! #权限设置
  createdAt: DateTime!
  parentId: ID
}
#广告类别
type Ad {
  id: ID! @unique
  typeName: String!
  plan: String!
  availiable: Boolean!
  editor: String
  createdAt: DateTime!
}
#广告消费记录
type AdConsumptionRec {
  id: ID! @unique
  typeName: String
  plan: String
  displayAmount: Int
  clickAmount: Int
  consumption: Int
  time: String
  editor: String
}
#咨询工作
type ConsultationWork {
  id: ID! @unique
  consultationType: String!
  dialogA: Int!
  dialogB: Int!
  dialogC: Int!
  workTime: String!
  editor: String
}

#消费单
type Bill {
  id: ID! @unique
  billId: String! @unique
  user: UserBasic!
  billPrice: Int
  pay: Int
  creator: String
  project: String
  payStatus: String
  payType: String
  doctorName: String
  frontDesk: String
  from: String
  where: String
  consultant: String
  createdAt: DateTime!
}
